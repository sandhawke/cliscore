{
  "name": "cliscore",
  "version": "0.1.0",
  "description": "A test runner for command-line interfaces, extending the Mercurial unified test format",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "cliscore": "src/cli.js"
  },
  "scripts": {
    "test": "node --test test/**/*.test.js",
    "test:examples": "node src/cli.js test/fixtures/example.t test/fixtures/example.md",
    "test:all": "npm test && npm run test:examples"
  },
  "keywords": [
    "testing",
    "cli",
    "test-runner",
    "shell",
    "unified-test-format"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
